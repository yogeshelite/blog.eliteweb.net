@{
    ViewBag.Title = "blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <!-- start container -->

    <div class="breadcrumbs-section">
        <!--start breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumbs-custom aos-item aos-init aos-animate" data-aos="fade-up">
                    <li style="margin-right: 5px;"><a href="/home">HOME </a></li>
                    <li><span class="activated">/ BLOG</span></li>
                </ul>
            </div>
        </div>

    </div><!--end breadcrumbs -->

    <div class="main-heading spc-btm-230">
        <!--start main heading -->
        <div class="row">
            <div class="col-lg-12">

                <h1>
                    Got Queries? Don't worry<br>
                    We'll answer them all
                </h1>
            </div>
        </div>
    </div><!-- end main heading -->

    <div class="industry-filter-category indust_spc">
        <!--start blog-filter section -->
        <div class="row">
            <div class="col-lg-12">
                <h2>Filter by Category</h2>
                <div class="industry-filter-btn">
                    <a href="">USER EXPERIENCE</a>
                    <a href="" class="active-btn">Technology</a>
                    <a href="">TEAM</a>
                </div>

            </div>
        </div>

    </div><!--end blog-filter section  -->





    <div class="blog-section">
        <!--start blog-section-->
        <div class="blog-border"></div>

        @foreach (var item in Model)
        {
            <div class="row elite-efs-spc mb-col-reverse">

                <div class="col-lg-7">
                    <h6>@item.Category</h6>
                    <h1>
                        @item.Heading
                    </h1>
                    <h2>5 mins read</h2>
                    <p>
                        @Html.Raw(item.ShortDiscription)
                    </p>
                    @*<a href="/blog/blog_details">READ MORE</a>*@
                    <a href="@Url.Action("blog_Details", "Blog", new {id = item.id })">READ MORE</a>
                </div>

                <div class="col-lg-5">
                    @{
                        var featuredimage = "data:image/png;base64," + item.FeaturedImage;
                    }
                    <img src="@featuredimage" width="100%">

                </div>

            </div>
        }
