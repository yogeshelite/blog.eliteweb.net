@model EliteWeb.Models.Career
@{
    ViewBag.Title = "career_details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <!-- start container -->

    <div class="breadcrumbs-section">
        <!--start breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumbs-custom aos-item aos-init aos-animate" data-aos="fade-up">
                    <li style="margin-right: 5px;"><a href="/home">HOME </a></li>
                    <li><span class="activated">/ CAREER DETAIL</span></li>
                </ul>
            </div>
        </div>
    </div><!--end breadcrumbs -->


    <div class="main-heading spc-btm-30">
        <!--start main heading -->

        <div class="row">
            <div class="col-lg-12">

                <h1>@Model.jobTitle</h1>

            </div>
        </div>
    </div><!-- end main heading -->

    <div class="career-location">
        <!-- START career location-->
        <div class="row">

            <div class="col-lg-12">

                <h5><a href=""><span><img src="~/images/loction.svg"></span>@Model.location</a></h5>

            </div>

        </div>


    </div><!-- end career location-->

    <div class="enterprise-img-section">
        <!--start carrer-img-section -->
        <div class="row">
            <div class="col-lg-12">
                @{
                    var imagestring = "data:image/png;base64," + Model.BanerImage;
                }
                <img src="@imagestring" class="mb-0">

            </div>

        </div>
    </div><!--end carrer-img-section -->


    <div class="career-job-details">
        <!--start carrer-detail-section -->
        <div class="row mb-40">
            <div class="col-lg-9">
                <h1>Job Introduction</h1>
                <p>@Model.jobintroduction</p>
            </div>
            <div class="col-lg-3">
                <a href="/CurrentOpening" class="carrer-apply-btn">APPLY</a>
            </div>
        </div>

        <div class="row mb-40">
            <div class="col-lg-9">
                <h1>Your Mission</h1>
                <p>@Model.Yourmission</p>
            </div>
            <div class="col-lg-3">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <h1>Ideally, you should have</h1>
                <p>
                    @Model.Skills
                </p>
            </div>
            <div class="col-lg-3">

            </div>
        </div>
    </div> <!--end carrer-detail-section -->

</div><!-- end container -->
